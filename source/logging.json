{
  "version": 1,
  "formatters": {
    "verbose": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s", 
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "taciturn": {
      "format": "%(message)s"
    }
  },
  "handlers": {
    "console": {
      "formatter": "verbose",
      "class": "logging.StreamHandler",
      "stream": "ext://sys.stdout"
    },
    "file_handler": {
      "formatter": "verbose",
      "filename": "./info.log",
      "mode": "a",
      "class": "logging.handlers.RotatingFileHandler",
      "maxBytes": 10485760,
      "backupCount": 3,
      "encoding": "utf-8"
    }
  },
  "loggers": {
    "__main__":{
      "level": "DEBUG",
      "handlers": ["console", "file_handler"],
      "propagate": false
    }
  },
  "root": {
    "level": "WARNING",
    "handlers": ["console", "file_handler"]
  },
  "disable_existing_loggers": false
  }